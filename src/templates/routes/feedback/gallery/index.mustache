{{ define "feedback/gallery" }}
<section class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Feedback Gallery</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{range .Data.PageData.feedbacks}}
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <h2 class="text-xl font-semibold mb-2">{{ .name }}</h2>
                    <p class="text-gray-600 mb-4">{{ .date }}</p>
                    <p class="text-gray-800">{{ .message }}</p>
                    {{if eq .message ""}}
                        <div class="flex italic items-center mt-4">
                           No message provided.
                        </div>
                    {{ end }}
                </div>
            </div>
        {{ end }}
    </div>
    
    <div class="text-center mt-8">
        <a href="/feedback" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-300">
            Submit New Feedback
        </a>
    </div>
</section>
{{ end }}
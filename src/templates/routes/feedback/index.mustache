{{ define "feedback"}}
<main class="w-full py-4">
<div class="block mb-6 mt-2">
    <h1 class="text-4xl font-semibold text-gray-800">Feedback Form</h1>
    <p class="text-green-500 text-sm">{{ .Data.PageData.Message }}</p>
</div>
<div class="w-full mx-auto bg-white p-6 rounded-md shadow-md border border-gray-200">
    <form action="/feedback" method="post" class="space-y-6">
        <div>
            <label for="fullname" class="block text-sm font-medium text-gray-700">Full Name</label>
            <p class="text-red-500 text-sm">{{ .Data.PageData.Errors.fullname }}</p>
            <input type="text" id="fullname" name="fullname" required_ 
                         placeholder="Enter your name"
                         value="{{ .Data.PageData.fullname }}"
                         class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                         minlength="2" maxlength="100">
        </div>
        
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
            <p class="text-red-500 text-sm">{{ .Data.PageData.Errors.email }}</p>
            <input type="email" id="email" name="email" required_
                         placeholder="Enter an email address"
                         value="{{ .Data.PageData.email }}"
                         class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                         pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
        </div>
        
        <div>
            <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
            <p class="text-red-500 text-sm">{{ .Data.PageData.Errors.subject }}</p>
            <input type="text" id="subject" name="subject" required_
                         placeholder="Enter a subject line"
                         value="{{ .Data.PageData.subject }}"
                         class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                         minlength="5" maxlength="200">
        </div>
        
        <div>
            <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
            <p class="text-red-500 text-sm">{{ .Data.PageData.Errors.message }}</p>
            <textarea id="message" name="message" rows="5" required_
                                placeholder="Enter a message"
                                value="{{ .Data.PageData.message }}"
                                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                minlength="10" maxlength="1000"></textarea>
        </div>
        
        <div>
            <button type="submit" 
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Submit Feedback
            </button>
        </div>
    </form>
</div>
</main>
{{ end }}
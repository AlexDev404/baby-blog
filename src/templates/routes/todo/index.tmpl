{{ define "todo"}}
<main class="w-full py-4">
<div class="block mb-6 mt-2">
    <h1 class="text-4xl font-semibold text-gray-800">Todo Item Form</h1>
    <p class="text-green-500 text-sm">{{ .Data.PageData.Message }}</p>
    <p class="text-red-500 text-sm">{{ .Data.PageData.Failure }}</p>
</div>
<div class="w-full mx-auto bg-white p-6 rounded-md shadow-md border border-gray-200">
    <form action="/todo" method="post" class="space-y-6">
        <div>
            <label for="task" class="block text-sm font-medium text-gray-700">Task</label>
            <p class="text-red-500 text-sm">{{ .Data.PageData.Errors.task }}</p>
            <input type="text" id="task" name="task" required_ 
                         placeholder="Enter the task"
                         value="{{ .Data.PageData.task }}"
                         class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                         maxlength="200">
        </div>
        
        <div>
            <button type="submit" 
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Submit Todo Item
            </button>
        </div>
    </form>
</div>
</main>
{{ end }}

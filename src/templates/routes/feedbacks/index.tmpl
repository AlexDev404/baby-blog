{{ define "feedbacks" }}
<section class="container mx-auto px-4 py-8">
    <section class="welcome mb-8">
        <h1 class="text-2xl font-bold">Feedback Gallery</h1>
        <p class="mt-2">
            Stay updated with the latest posts about my experience in web development, programming, and more in the Advanced
            Databases course.
        </p>
        <a
            href="/feedback"
        >
            <button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                Submit new feedback
            </button>
        </a>
    </section>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{range .Data.PageData.feedbacks}}
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="p-6">
                <h2 class="text-xl font-semibold mb-2">{{ .name }}</h2>
                <p class="text-gray-600 mb-4">{{ .date }}</p>
                <p class="text-gray-800">{{ .message }}</p>
                {{if eq .message ""}}
                <div class="flex italic items-center mt-4">
                    No message provided.
                </div>
                {{ end }}
            </div>
        </div>
        {{ end }}
    </div>
</section>
{{ end }}